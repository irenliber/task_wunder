FROM ruby:2.3.0

RUN apt-get update -yqq \
  && apt-get install -yqq --no-install-recommends \
  postgresql-client \
  && rm -rf /var/lib/apt/lists

WORKDIR /usr/src/app
COPY Gemfile* ./
RUN bundle install
COPY . .
RUN rake assets:precompile

EXPOSE 3003
CMD rm -rf tmp/pids/server.pid \
    && rails server -b 0.0.0.0 -p 3003