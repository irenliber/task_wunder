.errors

= form_with(model: @user, url: admin_user_path(@user),  method: :put, multipart: true) do |f|
  .form-group
    = f.label :full_name
    = f.text_field :full_name, class: 'form-control'
  .form-group
    = f.label :email
    = f.text_field :email, class: 'form-control'
  .form-group
    = f.label :birth_date
    = f.text_field :birth_date, class: 'form-control'
  .form-group
    = f.label :biography
    = f.text_area :biography, class: 'form-control'
  .form-group
    = f.label :avatar
    = f.file_field :avatar, class: 'form-control'

  = f.submit 'Update', class: 'btn btn-primary'

  = link_to admin_users_path do
    %button.btn.btn-default
      Cancel
